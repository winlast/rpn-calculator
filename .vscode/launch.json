{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch RPN Calculator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/rpn_calculator",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
